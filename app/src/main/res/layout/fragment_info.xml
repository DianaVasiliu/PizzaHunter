<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".InfoFragment">

        <include
            android:id="@+id/location_button"
            layout="@layout/info_button"
            app:infoButtonText="@{@string/info_button_1}"
            />
        <include
            android:id="@+id/schedule_button"
            layout="@layout/info_button"
            app:infoButtonText="@{@string/info_button_2}"
            />
        <include
            android:id="@+id/minorder_button"
            layout="@layout/info_button"
            app:infoButtonText="@{@string/info_button_3}"
            />
        <include
            android:id="@+id/terms_button"
            layout="@layout/info_button"
            app:infoButtonText="@{@string/info_button_4}"
            />
        <include
            android:id="@+id/allergens_button"
            layout="@layout/info_button"
            app:infoButtonText="@{@string/info_button_5}"
            />

    </LinearLayout>
</layout>