<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PizzaHunter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TextInput" parent="android:Theme">
        <item name="android:background">@drawable/rounded_corners_white_rectangle</item>
        <item name="android:layout_height">@dimen/text_input_height</item>
        <item name="android:layout_marginTop">@dimen/text_input_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/text_input_margin_vertical</item>
        <item name="android:paddingRight">@dimen/text_input_padding</item>
        <item name="android:paddingLeft">@dimen/text_input_padding</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>
    <style name="Theme.Text" parent="android:Theme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="Theme.InfoButton" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>